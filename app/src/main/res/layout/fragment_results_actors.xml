<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fouriam.android.esgi.fr.filmdroid.ResultsActorsFragment"
    android:background="@color/white"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/results_person_title"
        android:id="@+id/results_person_titleLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultsPersonList"
        android:layout_below="@+id/results_person_titleLabel"
        android:layout_centerHorizontal="true"
        android:fadeScrollbars="false"/>

</RelativeLayout>
